<% if current_user.standard? %>
<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <div class="jumbotron">
      <%= form_tag charges_path do %>
       <h3>Create private Wikis!</h3>
       <p>$15 Premium Membership</p>
       <script class='stripe-button' src="https://checkout.stripe.com/checkout.js" data-email="<%= @stripe_btn_data[:email] %>" data-key="<%= @stripe_btn_data[:key] %>" data-amount=<%= @stripe_btn_data[:amount] %> data-description="<%= @stripe_btn_data[:description] %>" ></script>
      <% end %>
    </div>
  </div>
</div>
<% else %>
  <h3> You are a Premium Member!</h3>
  <p>You can always downgrade your account without cancelling your account</p>
  <% link_to "downgrade", edit_charge_path, class:"btn"%>
<% end %>
