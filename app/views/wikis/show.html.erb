<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1><%= @wiki.title %><br>
      <small>Created by <%= @wiki.user.email %> </small>
    </h1>
    <p><%= @wiki.body %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-12 text-center">
    <%= link_to "Edit", edit_wiki_path(@wiki), class:"btn btn-success" %>
    <%= link_to "Delete", @wiki, method: :delete, class:"btn btn-danger", data: {confirm: "Are you sure you want to delete this wiki? It will be gone forever."} %>
  </div>
</div>
