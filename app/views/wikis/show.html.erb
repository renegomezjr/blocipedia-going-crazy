
<div class="row">

  <div class="col-md-6 col-md-offset-3">
    <h1><%= @wiki.title %></h1>
    <p><small>Created <%= time_ago_in_words(@wiki.created_at) %> ago, by <%= @wiki.user.email %></small></p>
    <p><%= markdown(@wiki.body) %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-12 text-center">
    <%= link_to "Edit", edit_wiki_path(@wiki), class:"btn btn-success" %>
    <%= link_to "Delete", @wiki, method: :delete, class:"btn btn-danger", data: {confirm: "Are you sure you want to delete this wiki? It will be gone forever."} %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <h4>Collaborators</h4>
    <% @wiki.collaborators.each do |collaborator| %>
    <p><%= collaborator.user.email %> <%= link_to "Remove", [@wiki, collaborator], method: :delete %></p>
    <% end %>
  </div>
</div>
